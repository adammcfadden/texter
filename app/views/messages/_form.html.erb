<%= bootstrap_nested_form_for(@message) do |f| %>
  <%= render "layouts/errors", object: @message %>

  <%= f.fields_for :to_numbers do |number_form| %>
    <div id="to-fields">
      <%= number_form.number_field :number %>
    </div>
  <% end %>
  <%= f.link_to_add "Add New Number", :to_numbers %>
  <%= f.text_field :from %>
  <%= f.text_field :body %>
  <div class="actions">
    <%= f.submit "Send Message" %>
  </div>
<% end %>
